@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Twitter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" /> <!--fontawesome-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Twitter.styles.css" asp-append-version="true" />
</head>
<body style="background-color: rgb(33, 37, 41);">

    <nav class="navbar navbar-expand-lg navbar-light bg-primary" style="color: rgb(33, 37, 41);">
        <a class="navbar-brand" asp-controller="User" asp-action="AdminIndex">&ensp; Admin DASHBOARD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="AdminIndex" style="font-weight: 500;">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Post" asp-action="AdminIndex" style="font-weight: 500;">Posts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="List" asp-action="AdminIndex" style="font-weight: 500;">Lists</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" style="font-weight: 500; text-decoration: underline;">Log out</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
